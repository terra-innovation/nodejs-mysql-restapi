{
  "name": "ft-app-backend",
  "version": "1.0.1",
  "private": true,
  "description": "A powerfull REST API with Node.js, Express and MySQL",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev_anterior": "env-cmd -f .env.development nodemon src/index.ts --exec \"node --import ./register-ts-node.js\"",
    "dev": "tsx watch --tsconfig ./tsconfig.json  src/index.ts",
    "start": "node dist/src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "pretest": "cross-env NODE_ENV=test jest --clearCache",
    "fix-imports": "node scripts/fix-imports.js",
    "fix-aliases": "node scripts/fix-aliases.js",
    "fix-ids": "node scripts/fix-ids.js",
    "add-fn-to-date": "node scripts/add-fn-to-date.js",
    "generate-models": "node scripts/generate-models/index.js",
    "prisma-sync": "node scripts/prisma/generate-models.js"
  },
  "imports": {
    "#root/*": "./*",
    "#src/*": "./src/*"
  },
  "env": {
    "TZ": "America/Lima"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@t3-oss/env-core": "^0.13.4",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "date-and-time": "^3.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.1",
    "file-type": "^20.4.1",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.4.4",
    "mariadb": "^3.4.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.9.15",
    "pdfkit": "^0.16.0",
    "pdfkit-table": "^0.1.99",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "sequelize": "^6.37.1",
    "sequelize-auto": "^0.8.8",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.0",
    "yup": "^1.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/pdfkit": "^0.13.9",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.8.0",
    "jest": "^29.0.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "prisma": "^6.7.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
