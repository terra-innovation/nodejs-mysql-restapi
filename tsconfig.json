{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "#root/*": ["./*"],
      "#src/*": ["src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "experimentalResolver": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "storage", "db", "http", "tests", "logs"]
}
