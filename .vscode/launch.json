{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\src\\index.js",
      "console": "internalConsole", // Cambia a 'integratedTerminal' o 'internalConsole'
      "outputCapture": "std" // para que el log de Winston se vea en la consola de depuraci√≥n
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "internalConsole", // O puedes usar "internalConsole"
      "outputCapture": "std"
    }
  ]
}
